<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileInfoActivity">

    <Button
        android:id="@+id/gotoProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="â†"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="100dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/heading"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_icon"
            android:layout_marginStart="16dp"


            />

        <!-- Name Button -->
        <Button
            android:id="@+id/contact_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:layout_marginStart="-10dp"
            android:textColor="#212121"
            android:backgroundTint="#FFFFFF"
            android:drawableStart="@drawable/user_icon"
            android:drawableTint="#3F51B5"/>

    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/education_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_icon"
            android:layout_marginStart="16dp"


            />

        <!-- Name Button -->
        <Button
            android:id="@+id/education_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:layout_marginStart="-10dp"
            android:textColor="#212121"
            android:backgroundTint="#FFFFFF"
            android:drawableStart="@drawable/user_icon"
            android:drawableTint="#3F51B5"/>

    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/aaa_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_icon"
            android:layout_marginStart="16dp"


            />

        <!-- Name Button -->
        <Button
            android:id="@+id/aaa_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awards and Achievements"
            android:layout_marginStart="-10dp"
            android:textColor="#212121"
            android:backgroundTint="#FFFFFF"
            android:drawableStart="@drawable/user_icon"
            android:drawableTint="#3F51B5"/>

    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/language_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_icon"
            android:layout_marginStart="16dp"


            />

        <!-- Name Button -->
        <Button
            android:id="@+id/language_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Languages"
            android:layout_marginStart="-10dp"
            android:textColor="#212121"
            android:backgroundTint="#FFFFFF"
            android:drawableStart="@drawable/user_icon"
            android:drawableTint="#3F51B5"/>

    </LinearLayout>

</LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>